<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Appbar"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:elevation="0dp"/>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/time_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar"
        android:layout_above="@id/button_section">
        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:timePickerMode="spinner"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/button_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/timer_start"
            android:textSize="24sp"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/btn_pause"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/timer_pause"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:theme="@style/pauseBtn"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/timer_continue"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_segment_record"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/segment_record"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:theme="@style/segmentRecordBtn"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>